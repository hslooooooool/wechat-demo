<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/center_audio_rl"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_rectangle_gray"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/center_audio_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="0s"
            android:textColor="@color/black_light"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/center_audio_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:padding="10dp"
            app:srcCompat="@drawable/take_audio" />

        <TextView
            android:id="@+id/center_audio_content"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="按住录音,上滑取消"
            android:textColor="@color/black_light"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>