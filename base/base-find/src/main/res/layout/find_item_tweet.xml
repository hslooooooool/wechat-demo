<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/line_bottom_gray_low"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_tweet_head_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/grey_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tweet_nick_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:includeFontPadding="false"
        android:text="TextView"
        android:textColor="@color/blue_light"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/item_tweet_head_iv"
        app:layout_constraintTop_toTopOf="@id/item_tweet_head_iv" />

    <TextView
        android:id="@+id/item_tweet_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textColor="@color/black_light"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/item_tweet_nick_tv"
        app:layout_constraintTop_toBottomOf="@id/item_tweet_nick_tv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_tweet_image_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintLeft_toLeftOf="@id/item_tweet_content_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_tweet_content_tv" />

    <TextView
        android:id="@+id/item_tweet_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:text="刚刚"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/item_tweet_image_rv"
        app:layout_constraintTop_toBottomOf="@+id/item_tweet_image_rv" />

    <TextView
        android:id="@+id/item_tweet_action_tv"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey_white"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="  •\t•  "
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@id/item_tweet_image_rv"
        app:layout_constraintTop_toBottomOf="@+id/item_tweet_image_rv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_tweet_comment_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey_white"
        app:layout_constraintLeft_toLeftOf="@id/item_tweet_time_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_tweet_time_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>