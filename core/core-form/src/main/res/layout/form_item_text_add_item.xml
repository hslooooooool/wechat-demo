<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/form_item_text_add_item_ll"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/line_bottom_gray_low"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/form_item_text_add_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="10dp"
        android:text="名称"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/form_item_text_add_item_edit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="10dp"
        android:text="修改"
        android:textColor="@color/grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/form_item_text_add_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:padding="10dp"
        android:text="删除"
        android:textColor="@color/grey"
        android:textSize="14sp" />
</LinearLayout>