<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--自定义配置主题-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:divider">@drawable/line_list_divider</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:listDivider">@drawable/line_list_divider</item>
        <item name="android:homeAsUpIndicator">@drawable/icon_back</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_exit</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_back_enter</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_back_exit</item>
    </style>

    <!--主体按钮样式-->
    <style name="MainButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_42</item>
        <item name="android:layout_marginLeft">@dimen/dp_24</item>
        <item name="android:layout_marginRight">@dimen/dp_24</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:background">@drawable/bg_rectangle_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>
    <!--主体按钮样式2-->
    <style name="MainButtonStyle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/dp_42</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:background">@drawable/bg_rectangle_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <!--标签页字体大小-->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <!--主页面标题样式-->
    <style name="PageTitleTextStyle">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_60</item>
    </style>

    <!--弹窗确认按钮样式-->
    <style name="PopSureButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_42</item>
        <item name="android:background">@drawable/bg_pop_sure</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <!-- ToolBar 主题设置-->
    <style name="ToolBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--ToolBar 字体大小-->
    <style name="ToolBarTextStyle">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--中部弹窗样式-->
    <style name="CenterDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <!--指令弹窗动画-->
    <style name="BottomPopAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

</resources>
